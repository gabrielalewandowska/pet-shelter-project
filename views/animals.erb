
<h1>Our Animals:</h1>

<div class="thumbnail-gallery">

    <% for animal in @animals do %>
    <div class="thumbnail-gallery-item">
      <a href="/animals/<%= animal.id %>">
        <img src="<%= animal.photo %>" alt="Animal's photo" class = "thumbnail-gallery-photo">
      </a>
      <div class="thumbnail-gallery-caption">
        <p> <%= animal.name %></p>
        <p><%= animal.admission_date %></p>
    </div>
    </div>
    <% end %>

</div>
