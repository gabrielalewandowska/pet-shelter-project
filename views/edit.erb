<h1>Edit the pet record:</h1>

<div class="form-wrapper">
  <form action="/animals/<%= @pet.id %>" method="POST">

    <label for="name">Name:</label><br/>
    <input type="text" name="name" id="name-field" value="<%= @pet.name %>"/><br/>

    <label for="species-select">Species:</label><br/>
    <select id="species-select" name="species">
        <option <%= 'selected' if @pet.species == "cat" %> value="cat">cat</option>
        <option <%= 'selected' if @pet.species == "dog" %> value="dog">dog</option>
    </select><br/>

    <label for="breed-field">Breed:</label><br/>
     <input id="breed-field" type="text" name="breed" value="<%= @pet.breed %>"><br/>

    <label for="age">Age:</label><br/>
    <input id="age" type="number" name="age" value="<%= @pet.age %>"/><br/>

    <label for="size-select">Size:</label><br/>
       <select id="size-select" name="size">
         <option <%= 'selected' if @pet.size == "small" %> value="small">small</option>
         <option <%= 'selected' if @pet.size == "medium" %> value="medium">medium</option>
         <option <%= 'selected' if @pet.size == "large" %> value="large">large</option>
       </select><br/>

     <label for="sex-select">Sex:</label><br/>
       <select id="sex-select" name="sex">
         <option <%= 'selected' if @pet.sex == "male" %> value="male">male</option>
         <option <%= 'selected' if @pet.sex == "female" %> value="female">female</option>
       </select><br/>

   <label for="adoptable-select">Adoptable:</label><br/>
       <select id="adoptable-select" name="adoptable">
         <option <%= 'selected' if @pet.status == "waiting for adoption" %> value="waiting for adoption">waiting for adoption</option>
         <option <%= 'selected' if @pet.status == "in vet care/ training" %> value="in vet care/ training">in vet care/ training</option>
         <option <%= 'selected' if @pet.status == "adopted" %> value="adopted">adopted</option>
       </select><br/>

   <label for="admission_date">Admission date:</label><br/>
   <input id="admission_date" type="date" name="admission_date" value="<%= @pet.admission_date %>"/><br/>

    <label for="photo">Photo url:</label><br/>
    <input id="photo" type="text" name="photo" value="<%= @pet.photo %>"/><br/>

    <input type="submit" value="Update">

  </form>
</div>
